{
  "name": "dndllout",
  "version": "1.0.0",
  "description": "dungeons and dragons fused with fallout text quest adventure",
  "main": "bin/main.js",
  "scripts": {
    "start": "electron .",
    "check": "./node_modules/.bin/eslint bin/; ./node_modules/stylelint/bin/stylelint.js 'css/*.css'; html-linter --config .htmllint.json; exit 0;",
    "fix": "./node_modules/.bin/eslint bin/ --fix; ./node_modules/stylelint/bin/stylelint.js 'css/*.css' --fix; exit 0;",
    "html-check": "html-linter --config path-to-html-linter-config.json; exit 0;",
    "js-check": "./node_modules/.bin/eslint bin/; exit 0;",
    "js-fix": "./node_modules/.bin/eslint bin/ --fix; exit 0; ./node_modules/stylelint/bin/stylelint.js 'css/*.css'",
    "style-check": "./node_modules/stylelint/bin/stylelint.js 'css/*.css'; exit 0;",
    "style-fix": "./node_modules/stylelint/bin/stylelint.js 'css/*.css' --fix; exit 0;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tukerty/DnDLLout.git"
  },
  "author": "Tukerty and Ptsh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tukerty/DnDLLout/issues"
  },
  "homepage": "https://github.com/tukerty/DnDLLout#readme",
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "chalk-animation": "^1.6.0",
    "electron": "^1.8.4",
    "electron-log": "^2.2.14"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "html-linter": "^1.0.8",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
